{
  "diagnostic.virtualText": false,
  "diagnostic.errorSign": "•",
  "diagnostic.warningSign": "•",
  "diagnostic.infoSign": "•",
  "list.insertMappings": {
    "<C-l>": "do:selectall",
    "<C-q>": "action:quickfix",
    "<C-c>": "do:exit"
