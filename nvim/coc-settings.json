{
  "eslint.filetypes": ["javascript", "typescript", "typescriptreact", "javascriptreact"],
  "diagnostic.virtualText": true,
  "diagnostic.errorSign": "•",
  "diagnostic.warningSign": "•",
  "diagnostic.infoSign": "•",
  "list.insertMappings": {
    "<C-l>": "do:selectall",
    "<C-q>": "action:quickfix",
    "<C-c>": "do:exit"
  },
  "list.source.files.args": ["--files", "--hidden"],
  "list.source.grep.args": ["-g", "!{yarn.lock,package-lock.json}"],
  "suggest.minTriggerInputLength": 5,
  "suggest.timeout": 500,
  "suggest.autoTrigger": "trigger",
  "diagnostic.refreshAfterSave": true,
  "diagnostic.refreshOnInsertMode": false
}
